---
import { Image } from "astro:assets";
import DetailPostLayout from "../../layouts/DetailPostLayout.astro";
import PostHeader from "../../components/PostHeader.astro";
// 导入 Image 组件和图像
const images = await Astro.glob('../../assets/projects/hwcloud/*.{jpg,png,webp}');
---
<DetailPostLayout
	title="HUAWEl Cloud summit 2021 Hong Kong"
	description = 'HUAWEl Cloud summit 2021 Hong Kong。',
	keywords = 'HUAWEl Cloud summit 2021,活动设计，活动策划，线下活动',
>
	<div class="post">
		<main class="post-wrapper">
				<PostHeader
					tag="Project"
					description="">
						<h1 class="font-type">
							HUAWEl Cloud summit 2021 Hong Kong
						</h1>
				</PostHeader>
				<div class="content">
					<div class="row desc">
						<div class="col-1a">
		
							<p class="post-desc">
								HUAWEl Cloud summit 2021 Hong Kong
								<br />项目背景：2021年10月,华为公司在香港举行了HUAWElCloud Summit 2021 Hong Kong活动。
                                <br />项目内容：负责活动场地设计，场景效果图制作。
								<br />版权归委托方所有@华为香港
							</p>
						</div>
					</div>
				</div>
			</section>
			<section class="preview">
				{images.map((img, index) => (
					<picture class="picture">
					  <Image src={img.default} alt={`Image ${index + 1}`}   loading="lazy" decoding="async" />
					</picture>
				  ))}
			</section>
		</main>
	</div>
</DetailPostLayout>

<style>
.icon{
	color:var(--color-900);
}
</style>

<script>
	var images = document.getElementsByTagName('img');
 	for (var i = 0; i < images.length; i++) {
	// 为每个 img 标签添加 draggable="false" 属性
	images[i].setAttribute('draggable', 'false');
	images[i].setAttribute('ref', 'nofollow');
  }
</script>
