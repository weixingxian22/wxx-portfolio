---
// Learn about using Astro layouts:
// https://docs.astro.build/en/core-concepts/layouts/

// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title?: string | undefined;
	keywords?: string | undefined;
	description?: string | undefined;

}

const { title, description,keywords} = Astro.props;
---

<html>
	<head>
		<MainHead title={title} description={description}  keywords={keywords}/>
	</head>
	<body class="_body">
		<div class="">
			<Nav transition:persist/>
			<div class="section detail">
				<div class="container">
					<slot />
				</div>
			</div>
			<Footer />
		</div>

		<style is:global lang="scss">
			:root {
				--bg-svg-blend-mode: overlay;
				--bg-blend-mode: darken;
			}

			:root.theme-dark {
				--bg-svg-blend-mode: darken;
				--bg-blend-mode: lighten;
			}
			img {
				max-width: 100%;
			}
			.detail {
				display: flex;
				flex-direction: column;
				max-width: 1020px;
				margin:0 auto;
				padding-bottom:36px;
			}
			.picture{
				display: block;
				margin-top:1rem;
				margin-bottom:1rem;
			}
			.container{
				padding:0 1rem;
			}
			section {
				position: relative;
				width: 100%;
				font-size: 16px;
			}
			h1.font-type{
				padding-top:0.5rem;
			}
			p{
				line-height: 1.6;
				margin-bottom:0.875em;
				text-align: left;
			}
			strong{
				font-weight: bold;
			}
			ul{
				padding-left: 2em;
				margin:2em 0;
			}
			ul li{
				margin:0.5em 0 .75em;
			}

			.post-header{
				width:100%;
				margin:24px auto 24px;
				padding-bottom:2rem;
				border-bottom: 1px solid var(--border);
			}
			h1{
				font-size: 2.25rem;
				font-weight: bold;
				color:var(--color-0);
				text-align: center;
			}
			h2{
				font-size: 2rem;
				font-weight: bold;
				color:var(--color-0);

			}
			h3{
				font-size: 1.5rem;
				font-weight: bold;
				color:var(--color-0);

			}
			a:link{
				color:var(--color-blue);
			}
			a:hover{
				text-decoration: underline;
			}
			.content {
				margin-top:20px;
				color: var(--color-200);
				font-size: 1rem;
			}
			.desc{
					margin: 4rem 0 2rem;
			}
			.post-title {
				grid-column-start: 1;
				font-size: 1.375rem;
				color: var(--color-100);
			}
			.post-desc {
				margin-top:1rem;
				grid-column-start: 1;
				font-size: 1rem;
				color: var(--color-100);
			}
			.btn{
					margin:1rem auto;
			}
			.btn a{
				font-size:1rem;
				max-width:300px;
				padding:1.125em 3em;
			}
			.preview{
				margin-top:4rem;
			}
			@media(max-width: 576px) {
				.post{
					h1{
						font-size:1.75rem;
						margin-top:2rem;
					}
					h2{
						font-size:1.5rem;
					}
					h3{
						font-size:1.25rem;
					}
					.post-title{
						font-size:1.25rem;
					}
					p,ul,li{
						font-size:0.875rem;
					}
				}
			}

		</style>

		<script>
			// 获取所有的 img 标签
			var images = document.getElementsByTagName('img');
			// 遍历所有的 img 标签
			for (var i = 0; i < images.length; i++) {
			// 为每个 img 标签添加 draggable="false" 属性
			images[i].setAttribute('draggable', 'false');
			images[i].setAttribute('ref', 'nofollow');
		}
		</script>


	</body>
</html>
